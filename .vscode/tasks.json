{
    "version": "2.0.0",
    "tasks": [
        // リリース用アーカイブの作成
        {
            "label": "build for release",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "create release archive",
            "type": "process",
            "command": "tar",
            "args": [
                "--create",
                "--gzip",
                "--verbose",
                "--exclude",
                ".DS_Store",
                "--file",
                "build.tar.gz",
                "--directory",
                "${workspaceFolder}/build",
                "."
            ],
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [ "build for release" ]
        }
    ]
}